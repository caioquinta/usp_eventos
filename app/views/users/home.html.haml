.home_wrapper
  = link_to 'Novo Evento', new_event_path, class: 'event-floater-btn ion-document'
  - next_events = Event.next_events
  - current_events = Event.current_events
  .col-lg-3
    %h1 Meus Eventos
  .col-lg-12
    - next_events.where(planner: current_user).each do |event|
      .col-lg-3.event_box{ class: "thumbnail_event_#{event.id}"}= render 'event_box', event: event 
  .col-lg-6
    %h1 Acontecendo agora!
  .col-lg-12
    - current_events.each do |event|
      .col-lg-3.event_box{ class: "thumbnail_event_#{event.id}"}= render 'event_box', event: event 
