.col-lg-12.center 
  %p - ou -
.col-lg-8.col-lg-offset-2
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      .col-lg-6= link_to "#{OmniAuth::Utils.camelize(get_correct_name(provider))}", omniauth_authorize_path(resource_name, provider), class: 'popup ion-social-'+get_correct_name(provider).to_s+' btn '+get_correct_name(provider).to_s+'-btn', 'data-width': 600, 'data-height': 400
  %br
  %hr
.col-lg-12
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Cadastrar", new_registration_path(resource_name)
    %br/
.col-lg-12
  - if controller_name != 'sessions'
    = link_to "Entrar", new_session_path(resource_name)
    %br/
.col-lg-12
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to "Esqueci minha senha", new_password_path(resource_name)
    %br/