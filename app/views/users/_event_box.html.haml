.col-xs-12
  Nome:
  = event.name
.col-xs-12
  - if !event.begin_date.nil?
    de
    = event.begin_date.strftime('%d/%m/%Y')
.col-xs-12
  - if !event.end_date.nil?
    atÃ©
    = event.end_date.strftime('%d/%m/%Y')
.col-xs-6
  = link_to 'Ver', event_path(event.id), class: 'btn btn-success'
.col-xs-6
  - if current_user.participants.find_by(event_id: event.id).nil?
    = link_to 'Participar', add_participant_event_path(event.id), remote: true, class: 'btn btn-info'
  - else
    Confirmado!
    = link_to 'Desistir', remove_participant_event_path(event.id), remote: true, class: 'btn btn-danger'